// Extract the values from the specified columns and convert them to decimal
    bool interestIsZero = decimal.TryParse(row[interestColumn].ToString(), out decimal interestValue) && interestValue == 0;
    bool principalPaymentIsZero = decimal.TryParse(row[principalPaymentColumn].ToString(), out decimal principalPaymentValue) && principalPaymentValue == 0;

    // Construct the string conditionally
    string interestPart = interestIsZero ? "Interest" : $"Interest {interestValue}";
    string principalPaymentPart = principalPaymentIsZero ? "Principal payment" : $"Principal payment {principalPaymentValue}";

    return $"{interestPart}_{principalPaymentPart}";
